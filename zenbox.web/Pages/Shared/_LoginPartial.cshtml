@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">    
            @if (UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Student").Result)
                {
                
                    <svg class="bi pe-none me-2" width="24" height="24" aria-hidden="true">
                        <use xlink:href="/lib/bootstrap-icons/bootstrap-icons.svg#person-circle" />
                    </svg>
                }
                @if (UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Tutor").Result)
                {
                    <svg class="bi pe-none me-2" width="24" height="24" aria-hidden="true">
                        <use xlink:href="/lib/bootstrap-icons/bootstrap-icons.svg#mortarboard-fill" />
                    </svg>
                }
                @if (UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Admin").Result)
                {
                    <svg class="bi pe-none me-2" width="24" height="24" aria-hidden="true">
                        <use xlink:href="/lib/bootstrap-icons/bootstrap-icons.svg#nut" />
                    </svg>
                }
                Hello @User.Identity?.Name!
            </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
